{
  "packageManager": "pnpm@8.6.1",
  "name": "nprogress-esm",
  "version": "0.1.5",
  "description": "ESM-friendly NProgress Rewrite With Typescript",
  "homepage": "https://nprogress-esm.vercel.app",
  "repository": {
    "url": "https://github.com/wangyewei/nprogress-esm"
  },
  "keywords": [
    "nprogress",
    "typescript",
    "esm"
  ],
  "author": "Yewei (Yev) Wang",
  "engines": {
    "node": ">=16.14.0",
    "pnpm": ">=8.6.1"
  },
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "esno packages",
    "build:progress": "tsc -p . --noEmit && rollup --config rollup.config.ts --configPlugin esbuild",
    "build:style": "esno scripts/buildStyle",
    "build": "run-s build:progress build:style",
    "build:playground": "esno scripts/buildPlayground",
    "build:all": "run-s build build:playground",
    "release": "bumpp package.json --commit --push --tag",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "@vitest/coverage-istanbul": "^1.1.3",
    "@vitest/coverage-v8": "^1.1.3",
    "bumpp": "^9.2.1",
    "esbuild": "^0.19.11",
    "esno": "^4.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "jsdom": "^23.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.9.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "vitest": "^1.1.3"
  },
  "dependencies": {
    "typescript": "^5.3.3"
  }
}
